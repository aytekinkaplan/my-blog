{
  "name": "my-blog-theme",
  "description": "My Blog Theme",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Aytekin Kaplane",
    "email": "ytknkpln@gmail.com",
    "url": "https://aytekinkaplan.com"
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme",
    "blog"
  ],
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan .",
    "test:ci": "gscan --fatal --verbose ."
  },
  "devDependencies": {
    "gscan": "^4.36.1"
  },
  "config": {
    "posts_per_page": 5,
    "custom": {
      "post_image_style": {
        "type": "select",
        "options": [
          "Wide",
          "Full",
          "Small",
          "Hidden"
        ],
        "default": "Wide"
      },
      "show_recent_posts_footer": {
        "type": "boolean",
        "default": true
      }
    },
    "card_assets": {
      "include": [
        "bookmark",
        "gallery"
      ]
    }
  }
}
