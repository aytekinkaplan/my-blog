{{!< default}}

<article class="post">
  <header>
    <h1>{{title}}</h1>
    <time datetime="{{date format="YYYY-MM-DD"}}">{{date
        format="MMMM DD, YYYY"
      }}</time>
  </header>

  <section class="post-content">
    {{content}}
  </section>

  <footer>
    <p>Written by {{primary_author.name}}</p>
    {{#if tags}}
      <p>Tags: {{tags separator=", "}}</p>
    {{/if}}
  </footer>
</article>