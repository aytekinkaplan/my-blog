<html lang="{{@site.locale}}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{meta_title}}</title>
    <link rel="icon" type="image/png" href="{{asset 'favicon.png'}}" />
    <link rel="canonical" href="{{url absolute="true"}}" />

    {{! Meta tags }}
    <meta property="og:site_name" content="{{@site.title}}" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{meta_title}}" />
    <meta property="og:description" content="{{meta_description}}" />
    <meta property="og:image" content="{{img_url @site.cover_image}}" />
    <meta property="og:url" content="{{url absolute="true"}}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{meta_title}}" />
    <meta name="twitter:description" content="{{meta_description}}" />
    <meta name="twitter:image" content="{{img_url @site.cover_image}}" />

    {{! Styles }}
    <link rel="stylesheet" href="{{asset 'css/styles.css'}}" />

    {{! Preconnect to external resources }}
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://code.jquery.com" crossorigin />

    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    <div class="viewport">
      <header class="site-header">
        <div class="container">
          <div class="site-logo">
            {{#if @site.logo}}
              <a href="{{@site.url}}">
                <img src="{{@site.logo}}" alt="{{@site.title}}" />
              </a>
            {{else}}
              <a href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
          </div>
          <nav class="site-nav">
            {{navigation}}
          </nav>
          <form class="search-form" action="{{@site.url}}/search/" method="get">
            <input
              type="search"
              name="q"
              placeholder="Search..."
              aria-label="Search"
            />
            <button type="submit">Search</button>
          </form>
        </div>
      </header>

      <main class="site-content">
        {{{body}}}
      </main>

      <footer class="site-footer">
        <div class="container">
          <div class="social-links">
            {{#if @site.facebook}}<a
                href="{{facebook_url @site.facebook}}"
                target="_blank"
                rel="noopener noreferrer"
              >Facebook</a>{{/if}}
            {{#if @site.twitter}}<a
                href="{{twitter_url @site.twitter}}"
                target="_blank"
                rel="noopener noreferrer"
              >Twitter</a>{{/if}}
            {{#if @site.instagram}}<a
                href="https://www.instagram.com/{{@site.instagram}}"
                target="_blank"
                rel="noopener noreferrer"
              >Instagram</a>{{/if}}
            {{#if @site.linkedin}}<a
                href="{{@site.linkedin}}"
                target="_blank"
                rel="noopener noreferrer"
              >LinkedIn</a>{{/if}}
          </div>
          <div class="footer-content">
            <p>&copy;
              {{date format="YYYY"}}
              {{@site.title}}. All rights reserved.</p>
            <nav class="footer-nav">
              {{navigation type="secondary"}}
            </nav>
          </div>
        </div>
      </footer>
    </div>

    {{! Scripts }}
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script src="{{asset 'js/main.js'}}"></script>

    {{ghost_foot}}
  </body>
</html>